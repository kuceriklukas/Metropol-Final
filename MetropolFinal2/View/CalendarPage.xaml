            <DatePicker x:Name="DatePicker" HorizontalAlignment="Center" Margin="0,6,0,12" VerticalAlignment="Center" CalendarIdentifier="GregorianCalendar" MinYear="{Binding MinYear}" Date="{Binding SelectedDate, Mode=TwoWay}"/>
